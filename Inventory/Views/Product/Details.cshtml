@model Inventory.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            @if (Model == null)
            {
                <div class="alert alert-info text-center">Product details not found.</div>
            }
            else
            {
                <div class="card border-0 shadow-lg">
                    <div class="card-header text-center text-white" style="background: linear-gradient(to right, #4e54c8, #8b6cb0);">
                        <h3 class="mb-0">Product Details</h3>
                    </div>

                    <div class="card-body">
                        <div class="card mt-3">
                            <div class="card-body">
                                <h5 class="card-title text-center"><strong>@Model.ProductName</strong></h5>
                                <p><strong>Category:</strong> @(Model.Category?.CategoryName ?? "N/A")</p>
                                <p><strong>Supplier:</strong> @(Model.Supplier?.SupplierName ?? "N/A")</p>
                                <p><strong>Price:</strong> @Model.Price (EGP)</p>
                                <p><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
                                <p><strong>Low Stock Threshold:</strong> @Model.LowStockThreshold</p>
                                <p><strong>Is Available:</strong> @(Model.StockQuantity > 0 ? "Yes" : "No")</p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-danger" asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a>
                            }
                            <a class="btn btn-outline-primary" asp-action="Index">Back to Products</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
